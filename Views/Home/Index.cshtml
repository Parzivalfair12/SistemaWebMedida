<style>
    .input_box {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-bottom: 20px;
    }

        .input_box input {
            width: 100%;
            max-width: 200px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 16px;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        margin-bottom: 0;
    }

    /* Alineación de las filas de inputs */
    .row-center {
        display: flex;
        justify-content: center;
    }

    /* Estilos para el botón */
    #toggleButton {
        padding: 10px 35px;
        font-size: 16px;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 25px;
        transform: translateY(3px);
    }

        /* Estilo cuando el botón está en estado "Off" */
        #toggleButton.off {
            background-color: red;
        }

        /* Estilo cuando el botón está en estado "On" */
        #toggleButton.on {
            background-color: green;
        }
</style>

