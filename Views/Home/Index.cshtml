                            minute: '2-digit',
                            second: '2-digit'
                        }).replace(',', ' -');
                        ArrayId.push(formattedDate);
                    }

                    var ctx = document.getElementById('ChartOxi').getContext('2d');

                    if (myLineChartOxi) {
                        myLineChartOxi.destroy();
                    }

                    myLineChartOxi = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ArrayId,
                            datasets: [{
