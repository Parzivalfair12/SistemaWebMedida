                error: function (error) {
                    console.log('Error fetching PresionDif data:', error);
                }
            });

            // Llamada AJAX para ReporteCo2
            jQuery.ajax({
                url: '@Url.Action("ReporteCo2", "Home")',
                type: "GET",
                dataType: "json",
